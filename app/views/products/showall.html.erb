<div class="container bg-light ">
    <div class="row row-cols-4 mt-5">
        <% Product.all.reverse_each do |product| %>
        <div class="col text-center border border-secondary">
            <div class="portfolio-item">
                <%= link_to product_path(product), class: 'portfolio-link' do %>               
                <div class="portfolio-hover">
                    <div class="portfolio-hover-content"></div>
                </div>
                <%= image_tag(product.image, alt: product.name, class: 'img-fluid',:size => "600x450") %>
                <% end %>
                <div class="portfolio-caption">
                    <div class="portfolio-caption-heading"><%= product.name%></div>
                    <div class="portfolio-caption-subheading text-muted"><%= product.price%> €</div>
                    <% if user_signed_in? %> <!-- Vérifier si l'utilisateur est connecté -->
                    <%= button_to 'Add to Cart', add_to_cart_path(product.id), method: :post, class: 'btn btn-primary' %>
                    <% end %>
                </div>
            </div>
        </div>
        <%end%>
    </div>
</div>